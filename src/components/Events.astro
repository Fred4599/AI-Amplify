---
import { BOOKING_URL } from '../config';
const courses = [
  { title: 'Building Websites with AI', tag: 'Course', image: '/courses/course-websites.png', color: 'purple' },
  { title: 'Building AI Backend Systems', tag: 'Course', image: '/courses/course-backend.png', color: 'violet' },
  { title: 'Building Videos', tag: 'Course', image: '/courses/course-videos.jpg', color: 'fuchsia' },
  { title: 'Building Apps', tag: 'Course', image: '/courses/course-apps.jpg', color: 'pink' },
  { title: 'Creating AI Agents', tag: 'Course', image: '/courses/course-agents.png', color: 'purple' },
  { title: 'AI Photos & Visuals', tag: 'Course', image: '/courses/course-photos.png', color: 'violet' },
  { title: 'Flyers & Presentations', tag: 'Course', image: '/courses/course-flyers.png', color: 'fuchsia' },
];
const colorClasses: Record<string, string> = {
  purple: 'text-purple-400 bg-purple-500/10',
  violet: 'text-violet-400 bg-violet-500/10',
  fuchsia: 'text-fuchsia-400 bg-fuchsia-500/10',
  pink: 'text-pink-400 bg-pink-500/10',
};
---
<div id="courses" class="relative w-full min-h-screen py-16 sm:py-24 md:py-32 z-20">
    <div class="w-full max-w-[1200px] mx-auto px-4 sm:px-6">
        <div class="reveal-text mb-4">
            <span class="text-xs font-mono text-purple-400 uppercase tracking-widest">What we teach</span>
        </div>
        <h2 class="font-display text-3xl sm:text-4xl md:text-6xl font-bold tracking-tight text-white mb-4 reveal-text">
            Your all-in-one resource
        </h2>
        <p class="text-neutral-400 text-base sm:text-lg max-w-2xl mb-10 sm:mb-16 reveal-text">
            Use AI to grow, scale, or take your business to the next level. Practical courses for business owners—from websites and apps to videos, photos, flyers, and more.
        </p>

        <div class="reveal-text -mx-4 sm:-mx-6 relative">
            <div class="courses-carousel-fade courses-carousel-fade--left" aria-hidden="true"></div>
            <div class="courses-carousel-fade courses-carousel-fade--right" aria-hidden="true"></div>
            <div class="courses-carousel flex gap-4 overflow-x-auto overflow-y-hidden pb-2 px-4 sm:px-6 scroll-smooth" aria-label="Course carousel">
                {courses.map((course) => (
                    <a href={BOOKING_URL} target="_blank" rel="noopener noreferrer" class="group flex-shrink-0 w-[280px] sm:w-[320px] rounded-2xl bg-neutral-900 border border-white/5 overflow-hidden hover:border-white/20 hover:bg-neutral-800/80 transition-all cursor-pointer snap-start">
                        <div class="aspect-video w-full overflow-hidden bg-neutral-800">
                            <img src={course.image} alt={course.title} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
                        </div>
                        <div class="p-5">
                            <div class="flex justify-between items-start mb-2">
                                <span class={`text-[10px] font-mono px-2 py-1 rounded ${colorClasses[course.color]}`}>{course.tag}</span>
                                <i data-lucide="arrow-up-right" class="w-4 h-4 text-neutral-600 group-hover:text-white transition-colors"></i>
                            </div>
                            <h4 class="text-white font-medium text-lg leading-tight">{course.title}</h4>
                        </div>
                    </a>
                ))}
            </div>
        </div>

        <div class="mt-12 text-center reveal-text">
            <a href={BOOKING_URL} target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center gap-2 px-6 py-3.5 sm:py-3 min-h-[48px] bg-white text-black rounded-full font-semibold text-sm hover:bg-neutral-200 transition-colors">
                Get a plan for your business — Book your free strategy call
                <i data-lucide="arrow-right" class="w-4 h-4"></i>
            </a>
        </div>
    </div>
</div>

<script>
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('reveal-visible');
            }
        });
    }, { threshold: 0.1 });
    document.querySelectorAll('.reveal-text').forEach(el => observer.observe(el));
</script>
