<section id="premium" class="w-full max-w-[1200px] px-4 sm:px-6 py-16 sm:py-24 md:py-32 z-20 relative">
    <div class="glass-panel rounded-2xl sm:rounded-3xl p-6 sm:p-12 md:p-16 relative overflow-hidden shadow-2xl shadow-purple-900/20">
        <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-10 mix-blend-overlay"></div>
        <div class="absolute top-0 right-0 w-[400px] h-[400px] bg-purple-600/20 blur-[100px] rounded-full"></div>

        <div class="relative z-10 flex flex-col md:flex-row gap-12 items-center">
            <div class="md:w-1/2">
                <div class="reveal-text">
                    <span class="px-3 py-1 rounded-full border border-purple-500/30 bg-purple-500/10 text-purple-400 text-[10px] font-bold tracking-widest uppercase">First 50 only</span>
                    <h2 class="font-display text-2xl sm:text-4xl md:text-5xl font-bold tracking-tight text-white mt-4 sm:mt-6 mb-4">
                        Want more? Get private time with Braydon.
                    </h2>
                    <p class="text-neutral-400 leading-relaxed text-sm md:text-base mb-6">
                        Not one-on-oneâ€”intimate, semi-private time with someone who can help you understand, build, and scale with AI. Jump on a call instead of only watching courses. Two semi-private coaching calls each week, capped at 8 people, so you get direct help on your projects.
                    </p>
                    <p class="text-white font-medium mb-6">
                        $97/month for the first 50 people. Prices will go up soon.
                    </p>
                    <div class="flex justify-center sm:justify-start">
                        <a href="#join" class="w-full sm:w-auto inline-flex items-center justify-center gap-2 px-8 py-3.5 sm:py-3 bg-white text-black rounded-full text-sm font-semibold hover:bg-neutral-200 transition-all shadow-[0_0_20px_rgba(255,255,255,0.2)] min-h-[48px]">
                            Get premium access
                            <i data-lucide="arrow-right" class="w-4 h-4"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="md:w-1/2 flex justify-center reveal-text delay-200">
                <div class="relative w-64 h-64 md:w-80 md:h-80 rounded-2xl overflow-hidden border-2 border-white/10 shadow-2xl shadow-purple-900/20">
                    <img src="/braydon.png" alt="Braydon - AI Amplify Academy" class="w-full h-full object-cover object-top" />
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('reveal-visible');
            }
        });
    }, { threshold: 0.1 });
    document.querySelectorAll('#premium .reveal-text').forEach(el => observer.observe(el));
</script>
